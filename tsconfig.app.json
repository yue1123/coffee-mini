{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
